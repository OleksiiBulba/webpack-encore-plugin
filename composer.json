{
    "name": "oleksiibulba/webpack-encore-plugin",
    "description": "This is a Micro plugin for webpack-encore support",
    "license": "MIT",
    "type": "micro-plugin",
    "version": "0.1",
    "authors": [
        {
            "name": "Oleksii Bulba",
            "email": "oleksii.bulba@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "micro/plugin-twig": "^0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.29",
        "friendsofphp/php-cs-fixer": "^3.13",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Boo\\WebpackEncorePlugin\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Boo\\WebpackEncorePlugin\\Tests\\Unit\\": "tests/unit"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "thanks": {
            "name": "symfony/webpack-encore-bundle",
            "url": "https://github.com/symfony/webpack-encore-bundle"
        }
    }
}
